<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".FirtMenuCarNav">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:contentDescription="TODO"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:textColor="@color/fontColor"
        android:textSize="30sp"
        tools:text="Payment Methods"
        app:fontFamily="@font/bebasneue_regular"/>

    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="73dp"
        android:layout_height="42dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/imageView26"
        android:layout_width="109dp"
        android:layout_height="120dp"
        android:layout_marginLeft="45dp"
        app:srcCompat="@drawable/credit_card" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="35dp"
        android:textColor="@color/fontColor"
        android:textSize="40sp"
        app:fontFamily="@font/montserrat_bold"
        tools:text="Credit Card" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/fontColor"
        android:textSize="24sp"
        app:fontFamily="@font/montserrat_bold"
        tools:text="CardHolder" />

    <EditText
        android:id="@+id/editText13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/colorFont2"
        tools:text="Name and surname"
        app:fontFamily="@font/montserrat_regular"/>

    <TextView
        android:id="@+id/textView30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/fontColor"
        android:textSize="24sp"
        tools:text="Card Number"
        app:fontFamily="@font/montserrat_bold"/>


    <EditText
        android:id="@+id/editText16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/colorFont2"
        tools:text="Number"
        app:fontFamily="@font/montserrat_regular"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/fontColor"
            android:textSize="24sp"
            tools:text="Year/Month"
            app:fontFamily="@font/montserrat_bold"/>

        <TextView
            android:id="@+id/textView36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/fontColor"
            android:textSize="24sp"
            tools:text="CVV"
            app:fontFamily="@font/montserrat_bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/colorFont2"
            tools:text="Year/Month"
            app:fontFamily="@font/montserrat_regular"/>

        <EditText
            android:id="@+id/editText21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            app:fontFamily="@font/montserrat_regular"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="147dp"
        android:layout_height="69dp"
        android:layout_gravity="right"
        android:layout_marginTop="
        dp"
        app:srcCompat="@drawable/save_button" />

</LinearLayout>