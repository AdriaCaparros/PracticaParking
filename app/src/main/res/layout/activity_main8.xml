<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".Main8Activity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:contentDescription="TODO"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:textColor="@color/fontColor"
        android:textSize="30sp"
        tools:text="Payment Methods"
        app:fontFamily="@font/bebasneue_regular"/>

    <ImageView
        android:id="@+id/imageView28"
        android:layout_width="73dp"
        android:layout_height="42dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/imageView29"
        android:layout_width="109dp"
        android:layout_height="120dp"
        android:layout_marginLeft="275dp"
        android:layout_marginTop="35dp"
        app:srcCompat="@drawable/paypal" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="255dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="35dp"
        android:textColor="@color/fontColor"
        android:textSize="40sp"
        app:fontFamily="@font/montserrat_bold"
        tools:text="Paypal"
        android:layout_marginLeft="255dp" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/fontColor"
        android:textSize="24sp"
        app:fontFamily="@font/montserrat_bold"
        tools:text="Username/Email" />

    <EditText
        android:id="@+id/editText11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:autofillHints=""
        android:ems="10"
        android:textColor="@color/colorFont2"
        android:inputType="textPersonName"
        app:fontFamily="@font/montserrat_regular"
        tools:text="paypal@email.com" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/fontColor"
        android:textSize="24sp"
        tools:text="Password"
        app:fontFamily="@font/montserrat_bold"/>

    <EditText
        android:id="@+id/editText17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:autofillHints=""
        android:ems="10"
        android:textColor="@color/colorFont2"
        android:inputType="textPersonName"
        app:fontFamily="@font/montserrat_regular"
        tools:text="Password" />

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="147dp"
        android:layout_height="69dp"
        android:layout_gravity="right"
        android:layout_marginTop="35dp"
        app:srcCompat="@drawable/save_button" />

</LinearLayout>